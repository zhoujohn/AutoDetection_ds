<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/dialog_message_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_message_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/v_cal_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="追边模式"
            android:textColor="@color/color_242424"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/v_iv_zhuibian"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/dialog_btn_zhuibian_normal"/>

            <ImageView
                android:id="@+id/v_iv_zhuixian"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:src="@mipmap/dialog_btn_zhuixian_normal"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_line_size"
            android:layout_marginTop="10dp"
            android:background="@color/dialog_line"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/dialog_sex_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_message_left_button"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/dialog_cancel"
                android:textColor="@color/dialog_cancel"
                android:textSize="16sp"/>

            <View
                android:id="@+id/dialog_sex_line"
                android:layout_width="@dimen/dialog_line_size"
                android:layout_height="match_parent"
                android:background="@color/dialog_line"/>

            <TextView
                android:id="@+id/dialog_sex_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_message_right_button"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/dialog_confirm"
                android:textColor="@color/dialog_confirm"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>